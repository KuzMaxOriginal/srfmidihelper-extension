{
  "name": "SRF MIDI Helper",
  "version": "1.0",
  "description": "SRF MIDI Helper v1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.sightreadingfactory.com/app"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "js/inject.js"
  ]
}